{
  "$schema": "https://github.com/Azure/data-api-builder/releases/download/v1/dab-config.schema.json",
  "data-source": {
    "database-type": "mssql",
    "connection-string": "@env('DATABASE_CONNECTION_STRING')"
  },
  "runtime": {
    "rest": {
      "enabled": true,
      "path": "/api"
    },
    "graphql": {
      "enabled": true,
      "path": "/graphql"
    },
    "host": {
      "mode": "production"
    }
  },
  "authentication": {
    "provider": "StaticWebApps"
  },
  "entities": {
    "data": {
      "source": "[dbo].[data]",
      "permissions": [
        {
          "role": "anonymous",
          "actions": [
            "*"
          ]
        }
      ]
    }
  }
}
